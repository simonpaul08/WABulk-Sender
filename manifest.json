{
    "manifest_version": 3,
    "name": "WABulk Sender",
    "description": "Bulk WhatsApp Message Sender Extension",
    "version": "1.0",
    "permissions": ["tabs"],
    "content_scripts": [
        {
            "js": ["scripts/content.js"],
            "matches": [
                "https://web.whatsapp.com/*"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "index.html"
    }
}