{
    "manifest_version": 3,
    "name": "WhatsApp Link Opener",
    "version": "1.0",
    "description": "Opens a link to send a WhatsApp message",
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "scripting"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "script.js"
            ]
        }
    ]
}